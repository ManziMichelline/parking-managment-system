<!DOCTYPE html>
<html>
<head>
  <title>Driver Dashboard</title>
</head>
<body>
  <h1>Driver Dashboard</h1>
  <a href="/auth/logout">Logout</a>
  <% if (current) { %>
    <h2>Current Parking</h2>
    <p>Plate: <%= current.plate_number %></p>
    <p>Entry Time: <%= current.entry_time %></p>
    <p>Fee to Pay: Not yet exited</p>
  <% } else { %>
    <p>No current parking</p>
  <% } %>
  <h2>Previous Records</h2>
  <ul>
    <% history.forEach(vehicle => { %>
      <li>Plate: <%= vehicle.plate_number %> - Entry: <%= vehicle.entry_time %> - Exit: <%= vehicle.exit_time %> - Fee: <%= vehicle.fee %> RWF</li>
    <% }) %>
  </ul>
</body>
</html>