<!DOCTYPE html>
<html>
<head>
  <title>Manager Dashboard</title>
</head>
<body>
  <h1>Parking Manager Dashboard</h1>
  <a href="/auth/logout">Logout</a>
  <h2>Record Vehicle Entry</h2>
  <form action="/manager/entry" method="POST">
    <input type="text" name="plate_number" placeholder="Plate Number" required>
    <input type="text" name="vehicle_type" placeholder="Vehicle Type" required>
    <input type="text" name="driver_username" placeholder="Driver Username" required>
    <button type="submit">Record Entry</button>
  </form>
  <h2>Parked Vehicles</h2>
  <ul>
    <% parked.forEach(vehicle => { %>
      <li><%= vehicle.plate_number %> - <%= vehicle.vehicle_type %> - Entry: <%= vehicle.entry_time %>
        <form action="/manager/exit/<%= vehicle.id %>" method="POST" style="display:inline;">
          <button type="submit">Record Exit</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <a href="/manager/history">View History</a>
  <a href="/manager/reports/daily">Daily Report</a>
  <a href="/manager/reports/monthly">Monthly Report</a>
</body>
</html>